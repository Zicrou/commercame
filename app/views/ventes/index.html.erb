<div class="container">
    <p style="color: green"><%= notice %></p>
  <div class="row">
    <section class="py-3 py-md-5">
      <% content_for :title, "Ventes" %>
      
      <%= link_to "Ajouter", new_vente_path, class:"btn btn-primary form-control"  %>
        <br/>
      <h1 class="mt-3">Liste des ventes</h1>

      <div id="ventes" class="mt-3 p-5">
        <div style="border: 1px solid black; padding: 10px; margin-bottom: 10px;">
          <% @total_per_year.each do |total| %>
            <h1>Total annuel <%= total[0].strftime('%Y').to_s + ": " +total[1].to_s  %>F</h1>
          <%end%>
        </div>
          
          <% @ventes.each do |month, ventes| %>
            <div class="mb-5">
              
              <h2><%= month.strftime('%B %Y')  %> | Total mensuel: <%= ventes.sum(&:price) %>F</h2>
              
              <% ventes.each do |vente| %>
                <div class="mb-3">
                  <div class="card">
                    <div class="card-header">
                      <%= render vente %>
                    </div>
                    <div class="card-body">
                    <div class="d-flex justify-content-around">
                      <%= link_to "Voir", vente, class:"btn btn-primary" %>
                      <%= link_to "Modifer", edit_vente_path(vente), class:"btn btn-warning" %>
                    </div>
                  </div>
                </div>
              <% end %>
              <hr>
            </div>
          <% end %>
      </div>
    </section>
  </div>
</div>
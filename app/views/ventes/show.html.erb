<h1>Voir</h1>
<div class="mb-3">
  <div class="card">
    <div class="card-header">
      <%= render @vente %>
    </div>
    <div class="card-body">
      <div class="d-flex justify-content-around">
        <%= link_to "Retour", ventes_path, class:"btn btn-outline-primary mx-2" %> 
        <%= link_to "Modification", edit_vente_path(@vente), class:"btn btn-warning mx-2" %>
        <%= button_to "Destroy this vente", @vente, method: :delete, class:"btn btn-danger mx-2" %>
      </div>
    </div>
  </div>
</div>
